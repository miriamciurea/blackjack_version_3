<div>
    <%= current_user.id == params[:id].to_i ? "Hi #{current_user.nickname}" : "#{@user.nickname}" %>
    <div class="admin-groups">

      <% if current_user.id == params[:id].to_i %>
            <% if @admin_groups.size == 0 %>
              <h4>You did not created a group yet...</h4>
              <%= link_to new_user_group_path(current_user.id) do %>
                <i class="fa-regular fa-square-plus"></i>
              <% end %>
            <% else %>
              <h4>You are a member at: </h4>
              <ul>
                <% @admin_groups.each do |group| %>
                  <li><%= link_to group.name, group_path(group.id) %></li>
                  <% end %>
              </ul>
            <% end %>
      <% else %>
              <% if @admin_groups.size == 0 %>
                <h4><%= @user.nickname %> did not create a group yet...</h4>
              <% else %>
                <h4><%= @user.nickname %> created: </h4>
                <ul>
                  <% @admin_groups.each do |group| %>
                    <li><%= link_to group.name, group_path(group.id) %></li>
                    <% end %>
                </ul>
              <% end %>
      <% end %>

    </div>

      <% if current_user.id == params[:id].to_i %>
          <div class="groups-part-of">
            <% if @groups_part_of.size == 0 %>
              <h4>You are not in any group yet...</h4>
              <%= link_to "Discover groups", groups_path %>
            <% else %>
              <h4>Here are the groups that you are part of: </h4>
              <ul>
              <% @groups_part_of.each do |group| %>
                <li><%= link_to group.name, group_path(group.id) %></li>
                <% end %>
              </ul>
            <% end %>
            <i class="fa-solid fa-user-plus"></i>
            </div>
      <% else %>
          <div class="groups-part-of">
            <% if @groups_part_of.size == 0 %>
              <h4><%= @user.nickname %> is not a member (of other groups) yet...</h4>
            <% end %>
          </div>
      <% end %>

  </div>
</div>
